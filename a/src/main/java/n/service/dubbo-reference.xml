<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://code.alibabatech.com/schema/dubbo
         http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
         
    <description>服务消费方配置</description>
    
    <!-- config -->
    <dubbo:reference id="preferenceService"   interface="com.hitler.service.sider.IPreferenceService"  version="${dubbo.version}"/>
    <dubbo:reference id="heroService"   interface="com.hitler.service.sider.IHeroService"  version="${dubbo.version}"/>
    
	<!-- 用户基本信息服务 -->
	<dubbo:reference  id="userService"  interface="com.hitler.service.authc.IUserService"  version="${dubbo.version}" />
		
	<!-- 聊天共享 -->	
	<dubbo:reference  id="userChatShareService"  interface="com.hitler.service.authc.IUserChatShareService"  version="${dubbo.version}" />
	
	<!-- 角色信息服务 -->
	<dubbo:reference  id="roleService"  interface="com.hitler.service.authc.IRoleService"  version="${dubbo.version}"  />
	<!-- 权限服务 -->
	<dubbo:reference  id="permissionService"  interface="com.hitler.service.authc.IPermissionService"  version="${dubbo.version}"  />
	<!-- 公司信息服务 -->
	<dubbo:reference  id="companyService"  interface="com.hitler.service.authc.ICompanyService"  version="${dubbo.version}"  />
	<!-- 分组信息服务 -->
	<dubbo:reference  id="layerService"  interface="com.hitler.service.authc.ILayerService"  version="${dubbo.version}"  />
	
	<!-- 访客记录服务 -->
	<dubbo:reference  id="accessRecordService"  interface="com.hitler.service.info.IAccessRecordService"  version="${dubbo.version}"/>
	<!-- 消息记录服务 -->
	<dubbo:reference  id="messageRecordService"  interface="com.hitler.service.info.IMessageRecordService"  version="${dubbo.version}" />
	<!-- 聊天提示配置服务 -->
	<dubbo:reference  id="promptConfigService"  interface="com.hitler.service.sider.IPromptConfigService"  version="${dubbo.version}" />
    
    <!-- play -->
    <dubbo:reference  id="gameService"  interface="com.hitler.service.play.IGameService"  version="${dubbo.version}" />
    <dubbo:reference  id="lnService"  interface="com.hitler.service.play.ILNService"  version="${dubbo.version}" />
    <dubbo:reference  id="playTypeService"  interface="com.hitler.service.play.IPlayTypeService"  version="${dubbo.version}" />
    <dubbo:reference  id="betRecordService"  interface="com.hitler.service.play.IBetRecordService"  version="${dubbo.version}" />
    
    <!-- ply -->
    <dubbo:reference  id="bankService"  interface="com.hitler.service.ply.IBankService"  version="${dubbo.version}" />
    <dubbo:reference  id="userBankCardService"  interface="com.hitler.service.ply.IUserBankCardService"  version="${dubbo.version}" />
    <dubbo:reference  id="thirdPlyService"  interface="com.hitler.service.ply.IThirdPlyService"  version="${dubbo.version}" />
    
    
</beans>